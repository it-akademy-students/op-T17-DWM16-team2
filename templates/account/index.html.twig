{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<div class="wrapper">
    <h1>Bonjour, {{ user.firstname }}</h1>
    <span>Compte créé le {{ user.joindate|date("d/m/Y") }}</span>
    <div class="favorite-movies">
        <h1><i class="fas fa-heart primary-color"></i> Mes films favoris</h1>
        <div class="movies">
            {% if favorites %}
                {% for movie in favorites %}
                <div class="small-movie card">
                    <a href="{{ path('movie', {'id': movie.movie.id}) }}">
                        <img class="poster-movie-card" src="{{ movie.0.image }}" alt="Affiche du film">
                    </a>
                    <div class="movie__info">
                        <h3>{{ movie.0.title }} <span class="movie-year primary-color">{{ movie.0.year }}</span></h3>
                        <i class="fas fa-star primary-color"></i>
                        <span>{{ movie.0.imDbRating }}</span>
                        <div class="buttons-movie-card">
                            <a href="{{ path('cart_add', {'id' : movie.movie.id}) }}" class="button button-black"><i class="fas fa-shopping-cart"></i></a>
                            {% if app.user %}
                                {% if movie.movie.isFavoritedByUser(app.user) %}
                                    <a href="{{ path('movie_favorite', {'id': movie.movie.id}) }}" class="button button-white js-button-favorite"><i class="fas fa-heart"></i></a>
                                {% else %}
                                    <a href="{{ path('movie_favorite', {'id': movie.movie.id}) }}" class="button button-white js-button-favorite"><i class="far fa-heart"></i></a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <span>Aucun film ajouté en favoris.</span>
            {% endif %}
        </div>
    </div>
    <div class="orders">
        <h1><i class="fas fa-history primary-color"></i> Mes commandes</h1>
        {% if orders %}
            <table>
                <thead>
                    <tr>
                        <th>Référence</th>
                        <th>Date de commande</th>
                        <th>Fin de location</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td><a href="#">{{ order.order.reference }}</a></td>
                            <td>{{ order.order.createdAt|date("d/m/Y h:i") }}</td>
                            <td>{{ order.order.createdAt|date_modify('+30 days')|date("d/m/Y h:i") }}</td>
                            <td>{{ order.order.price }} €</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <span>Vous n'avez encore jamais effectué de commande.</span>
        {% endif %}
    </div>
</div>
{% endblock %}
