{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="wrapper">
    <h1>Panier</h1>
{% if items | length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>Film</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.movie.0.title}}</td>
                    <td>{{ item.movie.movie.price}} € </td>
                    <td>{{ item.quantity}}</td>
                    <td>{{ item.movie.movie.price * item.quantity}} €</td>
                    <td>
                        <a href="{{ path('cart_add' , {'id' : item.movie.movie.id})}}">
                            <i class="fas fa-plus primary-color"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('cart_delete' , {'id' : item.movie.movie.id})}}">
                            <i class="fas fa-minus primary-color"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('cart_remove' , {'id' : item.movie.movie.id})}}">
                            <i class="fas fa-trash primary-color"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <span>Total : {{ total }} €</span>
    <a class="button button-white" href="{{ path('payment') }}"><i class="far fa-credit-card"></i><span>Passer la commande</span></a>
    <a class="button button-white" href="{{ path('checkout') }}">Checkout</a>
{% else %}
    <p>Surprise, c'est vide !</p>
{% endif %}
</div>
{% endblock %}