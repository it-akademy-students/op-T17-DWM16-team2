{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="wrapper">
    <h1>Panier</h1>
{% if items | length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>Film</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.movie.0.title}}</td>
                    <td>{{ item.movie.movie.price}} € </td>
                    <td>{{ item.quantity}}</td>
                    <td>{{ item.movie.movie.price * item.quantity}} €</td>
                    <td>
                        <a href="{{ path('cart_add' , {'id' : item.movie.movie.id})}}">
                            <i class="fas fa-plus primary-color"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('cart_delete' , {'id' : item.movie.movie.id})}}">
                            <i class="fas fa-minus primary-color"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('cart_remove' , {'id' : item.movie.movie.id})}}">
                            <i class="fas fa-trash primary-color"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <span>Total : {{ total }} €</span>
    <div>
        <form action="" method="POST">
            <script
               src="https://checkout.stripe.com/checkout.js" class="stripe-button"
               data-key="pk_test_51K6aoBK7fs0uaTbkiPtqOaZkGUHBzKbCmsXooShyNYj186JGkzdZljf513YeqEPs7vysSLWcVkPsBU6G1JOeKtBx00wj8RZFRd"
               data-amount="{{ total * 100 }}  "
               data-name="Paiement"
               data-description="test"
               data-image="{{ asset('images/logo.png') }}"
               data-locale="auto">
            </script>
        </form>
    </div>
{% else %}
    <p>Surprise, c'est vide !</p>
{% endif %}
</div>
{% endblock %}