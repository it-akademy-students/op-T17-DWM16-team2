{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Panier </h1>
</div>


{% if items | length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>Movie</th>
                <th>prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.movie.imdbId}}</td>
                    <td>{{ item.movie.price}} € </td>
                    <td>{{ item.quantity}}</td>
                    <td>{{ item.movie.price * item.quantity}} €</td>
                    <td>
                        <a href="{{ path('cart_remove' , {'id' : item.movie.id})}}">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('cart_add' , {'id' : item.movie.id})}}">
                            <i class="fas fa-cart-plus"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('cart_delete' , {'id' : item.movie.id})}}">
                            <i class="fas fa-cart-arrow-down"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td> Total :</td>
                <td>{{ total }} € </td>
                <td></td>
            </tr>
        </tfoot>
    </table>
{% else %}
    <p>Surprise, c'est vide !</p>
{% endif %}




{% endblock %}
