<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %} | Movie Town</title>
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <script src="https://kit.fontawesome.com/dd4bc6b830.js" crossorigin="anonymous"></script>
        <script src="{{ asset('js/app.js') }}" async></script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="nav-bar">
            <a href="/"><img src="{{ asset('images/logo.png') }}" alt="Logo Movie Town"></a>
            <ul>
                {% if app.user %}
                    <li><a href="{{ path('app_logout') }}">Se déconnecter</a></li>
                    <li><a href="{{ path('account') }}" class="button button-register">Mon compte</a></li>
                {% else %}
                    <li><a href="{{ path('app_login') }}">Se connecter</a></li>
                    <li><a href="{{ path('app_register') }}" class="button button-register">Créer un compte</a></li>
                {% endif %}
            </ul>
        </nav>
        {% block body %}{% endblock %}
    </body>
    <footer>
        <span>© 2021 by Movie Town, Inc.</span>
    </footer>
</html>
