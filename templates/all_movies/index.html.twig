{% extends 'base.html.twig' %}

{% block title %}Tous les films{% endblock %}

{% block body %}
<div class="wrapper">
    <div class="all-movies">
        {% for movie in movies %}
        <a href="{{ path('movie', {'id': movie.movie.id}) }}" class="all-movies__movie card">
            <img src="{{ movie.0.image }}" alt="Affiche du film">
            <div class="movie__info">
                <h3>{{ movie.0.title }} <span class="movie-year">{{ movie.0.year }}</span></h3>
                <i class="fas fa-star"></i>
                <span>{{ movie.0.imDbRating }}</span>
            </div>
        </a>
        {% endfor %}
    </div>
</div>
{% endblock %}
