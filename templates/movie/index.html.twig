{% extends 'base.html.twig' %}

{% block title %}{{ movie.0.title }}{% endblock %}

{% block body %}
<div class="wrapper">
    <div class="card card-big">
        <div class="movie-card">
            <div class="movie-card__movie-info-left">
                <img src="{{ movie.0.image }}" alt="Affiche film">
            </div>
            <div class="movie-card__movie-info-right">
                <h1>{{ movie.0.title }} <span class="movie-year">{{ movie.0.year }}</span></h1>
                <i class="fas fa-star"></i>
                <span>{{ movie.0.imDbRating }}</span>
                <p>{{ movie.0.plotLocal }}</p>
                <a href="#" class="button button-add-cart">Louer en HD {{ movie.movie.price }}â‚¬</a>
                {% if app.user and movie.movie.isFavoritedByUser(app.user) %}
                    <a href="#" class="button button-favorite"><i class="fas fa-heart"></i> Retirer des favoris</a>
                {% else %}
                    <a href="#" class="button button-favorite"><i class="far fa-heart"></i> Ajouter en favoris</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
