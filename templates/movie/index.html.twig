{% extends 'base.html.twig' %}

{% block title %}{{ movie.0.title }}{% endblock %}

{% block body %}
<div class="wrapper">
    <div class="card card-big">
        <div class="movie-card">
            <div class="movie-card__movie-info-left">
                <img src="{{ movie.0.image }}" alt="Affiche film">
            </div>
            <div class="movie-card__movie-info-right">
                <h1>{{ movie.0.title }} <span class="movie-year">{{ movie.0.year }}</span></h1>
                <i class="fas fa-star"></i>
                <span>{{ movie.0.imDbRating }}</span>
                <p>{{ movie.0.plotLocal }}</p>
                <a  href="{{ path('cart_add', {'id' : movie.movie.id})}}">Louer en HD {{ movie.movie.price }}â‚¬ </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
